			<div class="row m-3">
				<div class="col-lg-12">
					<div class="row">
						<div class="col m-0 p-0">
							<div class="shadow-sm border m-2 p-4 bg-white">
								<div class="d-flex align-items-center justify-content-between">
									<h1 class="text-primary fw-bold">Tableau de bord</h1>
									
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					<ChartRenderer name="'order_per_expence'" type="'bar'" title="'Commandes et Dépenses'" store="state.store" />
			
				</div>

				<div class="col-lg-6">

					<ChartRenderer name="'daily_profit'" type="'line'" title="'Evolution bénéfice par jour'" store="state.store" />
					
				</div>
				

			</div>
