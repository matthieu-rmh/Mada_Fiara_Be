<odoo>
    <data>
       <menuitem id="menu_sale_order_analysis" 
              name="Commandes par jour" 
              parent="sale.menu_sale_report"
              sequence="20"
              action="action_dashboard_analysis_graph_view"/>


    <!-- Graph View -->
    <record id="view_dashboard_analysis_graph" model="ir.ui.view">
        <field name="name">sale.order.graph</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <graph string="Commandes par jour" type="line">
                <field name="order_day" type="row"/>
                <field name="amount_total" type="measure"/>
            </graph>
        </field>
    </record>

     <!-- Action -->
    <record id="action_dashboard_analysis_graph_view" model="ir.actions.act_window">
        <field name="name">Commandes par jour</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_dashboard_analysis_graph"/>
    </record>

    </data>
</odoo>