<odoo>
    <data>
      

    <!-- Graph View -->
    <record id="view_sale_order_graph" model="ir.ui.view">
        <field name="name">sale.order.graph</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <graph string="Commandes par jour" type="line">
                <field name="date_entry" type="row"/>
                <field name="amount_total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sale_order_graph_view" model="ir.actions.act_window">
        <field name="name">Commandes par jour</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_sale_order_graph"/>
    </record>

    <!-- Dashboard view -->
		<record model="ir.ui.view" id="sales_dashboard_view">
			<field name="name">Dashboard</field>
			<field name="model">board.board</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Dashboard">
					<board style="1">
						<column>
							<action name="%(mfb_dashboard_analytics.action_sale_order_graph_view)d" id="sale_of_the_day" string="Sale of the day"/>
						</column>
					</board>
					<board>
					
						<column>
							<action name="%(mfb_dashboard_analytics.action_sale_order_graph_view)d" id="sale_of_the_day" string="Sale of the day"/>
						</column>
						<column>
							<action name="%(mfb_dashboard_analytics.action_sale_order_graph_view)d" id="sale_of_the_day" string="Sale of the day"/>
						</column>
					</board>
					<!-- <board >
						<column>
							<action name="%(sales_dashboard.action_order_evolution_graph)d" string="Turnover Evolution"/>
						</column>
						<column>
							<action name="%(sales_dashboard.action_month_orders_graph)d" string="Orders of The Month"/>
						</column>
						<column>
							<action name="%(sales_dashboard.action_orders_state_graph)d" string="Orders State"/>
						</column>
					</board> -->
				</form>
			</field>
		</record>

    <!-- Action to open the dashboard -->
		<record model="ir.actions.act_window" id="open_dashboard_action">
			<field name="name">Dashboard</field>
			<field name="res_model">board.board</field>
			<field name="view_mode">form</field>
			<field name="usage">menu</field>
			<field name="context">{}</field>
			<field name="view_id" ref="sales_dashboard_view"/>
			<!-- <field name="search_view_id" ref="dashboard_target_filter_view_search"/> -->
		</record>

     <!-- Menu Item -->
    <menuitem id="menu_sale_order_analysis" 
              name="Commandes par jour" 
              parent="sale.menu_sale_report"
              sequence="20"
              action="open_dashboard_action"/>

    </data>
</odoo>