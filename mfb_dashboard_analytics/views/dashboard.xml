<odoo>
    <data>
      

    <!-- Graph View 1: Commandes par jour -->
    <record id="view_sale_order_graph_1" model="ir.ui.view">
        <field name="name">sale.order.graph.1</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <graph string="Commandes par jour" type="line">
                <field name="date_entry" type="row"/>
                <field name="amount_total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Graph View 2: Commandes par mois -->
    <record id="view_sale_order_graph_2" model="ir.ui.view">
        <field name="name">sale.order.graph.2</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <graph string="Commandes par mois" type="line">
                <field name="date_entry" type="row" interval="month"/>
                <field name="amount_total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Kanban View for Dashboard -->
    <record id="view_sale_order_dashboard" model="ir.ui.view">
        <field name="name">sale.order.dashboard</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record">
                            <div class="o_kanban_column" style="width: 48%; display: inline-block; vertical-align: top;">
                                <div class="o_kanban_column_title">Commandes par jour</div>
                                <field name="amount_total" widget="graph"
                                    options="{
                                        'model': 'sale.order',
                                        'view_id': 'view_sale_order_graph_1'
                                    }"/>
                            </div>
                            <div class="o_kanban_column" style="width: 48%; display: inline-block; vertical-align: top;">
                                <div class="o_kanban_column_title">Commandes par mois</div>
                                <field name="amount_total" widget="graph"
                                    options="{
                                        'model': 'sale.order',
                                        'view_id': 'view_sale_order_graph_2'
                                    }"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sale_order_graph_view" model="ir.actions.act_window">
        <field name="name">Commandes par jour</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="view_sale_order_dashboard"/>
    </record>

     <!-- Menu Item -->
    <menuitem id="menu_sale_order_analysis" 
              name="Commandes par jour" 
              parent="sale.menu_sale_report"
              sequence="20"
              action="action_sale_order_graph_view"/>

    </data>
</odoo>